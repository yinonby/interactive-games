{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ESNext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["src/*"],
    }
  }
}
