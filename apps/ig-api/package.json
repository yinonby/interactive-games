{
  "name": "@ig/api",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "test": "npm run tsc && npm run lint && npm run cover:unit",
    "tsc": "npx tsc",
    "lint": "npm run lint:eslint && npm run lint:cycles",
    "lint:eslint": "eslint -c ./.eslint.config.mjs ./src",
    "lint:fix": "npm run lint:eslint -- --fix",
    "lint:cycles": "madge --circular --extensions ts,tsx,js .",
    "test:unit": "cross-env NODE_ENV=test LOG_LEVEL=SILENT vitest",
    "ut": "npm run test:unit --",
    "test:verbose": "cross-env NODE_ENV=test LOG_LEVEL=VERBOSE vitest",
    "cover:unit": "npm run test:unit -- run --coverage",
    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=development LOG_LEVEL=DBG tsx --no-cache index.ts",
    "start:dev:inspect": "NODE_ENV=development LOG_LEVEL=DBG tsx --no-cache --inspect index.ts",
    "start:dev:presets:all": "DEV_PRESETS=all npm run start:dev",
    "pm2:start": "pm2 start .pm2.ecosystem.config.cjs --only",
    "pm2:start:dev": "npm run 'pm2:start' -- 'ig-api:dev'"
  },
  "dependencies": {
    "@ig/auth-api": "*",
    "@ig/app-engine-db": "*",
    "@ig/app-engine-be-logic": "*",
    "@ig/games-engine-api": "*",
    "@ig/games-engine-db": "*",
    "@ig/games-engine-be-models": "*",
    "@ig/utils": "*",
    "dotenv": "^16.6.1",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@ig/lint": "*",
    "@ig/ts-deps": "*",
    "@ig/vitest": "*",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "cross-env": "^7.0.3"
  }
}
