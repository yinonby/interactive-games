{
  "name": "@ig/lib",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "test": "npm run tsc && npm run lint && npm run cover:unit",
    "tsc": "npx tsc",
    "lint": "npm run lint:eslint && npm run lint:cycles",
    "lint:eslint": "eslint -c ./.eslint.config.mjs ./src",
    "lint:fix": "npm run lint:eslint -- --fix",
    "lint:cycles": "madge --circular --extensions ts,tsx,js .",
    "test:unit": "cross-env NODE_ENV=testing LOG_LEVEL=SILENT vitest",
    "test:verbose": "cross-env NODE_ENV=testing LOG_LEVEL=VERBOSE vitest",
    "cover:unit": "npm run test:unit -- run --coverage"
  },
  "devDependencies": {
    "@ig/lint": "*",
    "@ig/vitest": "*",
    "@types/node": "^25.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}